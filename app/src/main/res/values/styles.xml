<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="text_title_splash">
        <item name="android:textSize">@dimen/text_title_splash_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="text_title_toolbar">
        <item name="android:textSize">@dimen/text_title_toolbar</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="text_username">
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="text_small_gray">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="text_regular">
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="text_name_repos">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

</resources>